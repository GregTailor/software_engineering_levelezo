<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="760" prefWidth="540" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.MainMenuController">
<children>
    <Label alignment="CENTER" layoutX="120.0" prefHeight="100.0" prefWidth="300.0" text="Sodoku" textAlignment="CENTER" wrapText="true">
        <font>
            <Font name="MV Boli" size="80.0" />
        </font>
    </Label>
    <Button fx:id="button_resume_game" layoutX="170.0" layoutY="150.0" mnemonicParsing="false" prefHeight="45" prefWidth="200.0" styleClass="main_menu_button" text="Resume game" onMouseClicked="#resumeGame"/>
    <Button fx:id="button_new_game" layoutX="170.0" layoutY="300.0" mnemonicParsing="false" prefHeight="45" prefWidth="200.0" styleClass="main_menu_button" text="New game" onMouseClicked="#newGame" />
    <Button fx:id="button_load_game" layoutX="170.0" layoutY="450.0" mnemonicParsing="false" prefHeight="45" prefWidth="200.0" styleClass="main_menu_button" text="Load game" onMouseClicked="#loadGame"/>
    <Button fx:id="button_exit_game" layoutX="170.0" layoutY="600.0" mnemonicParsing="false" prefHeight="45" prefWidth="200.0" styleClass="main_menu_button" text="Exit game" onMouseClicked="#exitGame"/>
</children>
</Pane>
